body {
    margin: 0;
    font-family: 'Oxygen', sans-serif;
}

.header {
    background-color: #252525;
    color: white;
    height: 45px;
    width: 1800px;
    margin: auto;
}

.head {
    display: inline-block;
    width: 100%;
    background-color: #252525;
    text-align: center;
}

.header a {
    text-decoration: none;
    color: white;
}

.user {
    display: inline-block;
    color: white;
    margin-left: 20%;
    font-weight: 300;
    position: absolute;
}

.user a {
    text-decoration: none;
}

.userstyle {
    color: bisque;
}

.header div {
    display: inline-block;
    float: right;
}

.caisse {
    margin-right: 20%;
    ;
    width: 100px;
    text-align: center;
    height: 100%;
    background-color: #48bac1;
}

.caisse img {
    padding-top: 15px;
}

.recherche {
    height: 100%;
    width: auto;
    display: inline-block;
    margin-right: 10px;
}

.recherche span {
    margin-right: 10px;
    display: inline-block;
}

.recherche img {
    display: inline-block;
    padding-top: 15px;
}

.clickrech .barresearch input {
    margin-top: 13px;
    margin-left: 5px;
    width: 0;
    visibility: hidden;
    transition: 1s;
}

.clickrech:hover .barresearch input {
    visibility: visible;
    width: 150px;

}

.co a {
    height: 100%;
    margin-right: 10px;
    color: bisque;
    width: 100px;
    text-align: center;
}

.co p {
    display: inline-block;
    font-weight: 300;
    font-size: 14px;
    margin-top: 15px;
}

.bara {
    border-right: solid 2.1px white;
    padding-right: 18px;
}

/*------------------------------------ Fin Head --------------------------------------------*/

/*------------------------------------ DEbut menu --------------------------------------------*/

.menu {
    width: 100%;
    height: 100px;
    color: #ffffff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    background-color: #ffffff;
    position: relative;
}

.logo {
    float: left;
    color: black;
    margin-left: 250px;
    margin-top: 16px;
    display: inline-block;
}

.menu ul {
    list-style: none;
    margin-top: 40px;
    font-size: 0.9vw;
    display: inline-block;
    float: right;
    padding-left: 0;
    margin-right: 350px;
}

.menu ul li {
    display: inline;
}

.menu ul li a {
    text-decoration: none;
    padding: 20px 15px 33px;
    color: black;
    transition: 0.5s;

}

.menu ul li a:hover {
    color: #48bac1;
    transition: 0.5s;
}

.menu ul li a span {
    color: #48bac1;
}

/*------------------------------------ fin menu --------------------------------------------*/