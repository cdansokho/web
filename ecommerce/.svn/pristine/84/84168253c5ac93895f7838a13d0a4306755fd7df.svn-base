/*------------------------------------ Debut banner --------------------------------------------*/

.banner {
    display: inline-block;
    width: 100%;
    background-color: #ececec;
    height: 450px;
}

.contenu {
    width: 1000px;
    margin-left: auto;
    margin-right: auto;
    padding-right: 15px;
    padding-left: 15px;
}

.imgpaire {
    float: right;
    width: auto;
}

.imgpaire img {
    width: 650px;
    margin-top: 30px;
}

.text {
    display: inline-block;
    margin-top: 95px;
}

.text h1 {
    color: #797979;
    font-weight: 300;
}

.text h2 {
    color: #7a5470;
    width: 200px;
    font-weight: 300;
}

.text h3 {
    line-height: 20px;
    color: #252525;
    font-weight: 300;
}

.bouton {
    border: 3px solid #47bac1;
    display: inline-block;
    padding: 12px 50px 10px 25px;
    transition: 0.3s;
    color: black;
    text-decoration: none;
}

.bouton:hover {
    background-color: #47bac1;
    transition: 0.3s;
    color: white;
}

